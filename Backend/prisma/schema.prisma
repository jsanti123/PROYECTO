generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id
  name        String   @db.VarChar(255)
  description String?   @db.VarChar(255)
  category_id String
  supplier_id String
  price       Decimal  @db.Decimal(10, 2)
  iamge       Bytes?    @db.ByteA
  stock       Int
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt @default(now())
  category    Caterogy @relation(fields: [category_id], references: [id])
  supplier    Supplier @relation(fields: [supplier_id], references: [id])
}

model Caterogy {
  id       String    @id
  products Product[]
}

model Supplier {
  id       String    @id
  products Product[]
}
